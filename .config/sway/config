##### Constants #####

# keys
set $mod    Mod4

# colours
set $bg     #4422aa
set $bg-f   #aa2277
set $bg-u   #cc1133
set $text   #cc4499
set $text-f #ee66bb
set $text-u #000000

# applications
set $term       env KITTY_ENABLE_WAYLAND=1 kitty
set $browser    qutebrowser

# workspaces
set $ws1    "  1 "
set $ws2    "  2 "
set $ws3    "  3 "
